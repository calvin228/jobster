<% if (!user) { %>
<form method="post" action="/login/user">
    <div class="form-group">
      <label for="username">Username</label>
        <input type="text" autocomplete="off" name="username" class="form-control input-sm" id="username">
  </div>
    <div class="form-group">
      <label for="pwd">Password</label>
      <input type="password" name="password" class="form-control input-sm" id="pwd">
    </div>
    <div>
      <p>New right here?</p>
      <a href="/register"><p>Register here</p></a>
      <br>
  </div>
  <button type="submit" class="btn btn-default">Login</button>
  <% } else { %>
    <div class="form-group">
      <span>Hello, <%= user.name %></span><br /><br />
      <a href="/my-profile"><button class="form-control btn btn-success" type="submit" value="View My Profile"/>View My Profile</button></a>
      <a href="/applied-jobs"><button class="form-control btn btn-info" type="submit"/>View Applied Jobs</button></a>
      <a href="/quickhire-alert"><button class="form-control btn btn-primary" type="submit"/>View Quickhire Alert</button></a>
      <a href="/logout"><button class="form-control btn btn-danger" type="submit" value="Log out"/>Log Out</button></a>
    </div>
  <% } %>
</form>
   