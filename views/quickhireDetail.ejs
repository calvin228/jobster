<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Quick Hire Detail - Jobster</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
    />
    <link rel="shortcut icon" href="/images/icon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="keywords"
      content="Soft Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design"
    />
    <script>
      addEventListener(
        "load",
        function() {
          setTimeout(hideURLbar, 0);
        },
        false
      );
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    </script>
    <!--//tags -->
    <link
      href="/css/bootstrap.css"
      rel="stylesheet"
      type="text/css"
      media="all"
    />
    <link href="/css/style.css" rel="stylesheet" type="text/css" media="all" />

    <link href="/css/font-awesome.css" rel="stylesheet" />
    <!-- //for bootstrap working -->
    <link
      href="//fonts.googleapis.com/css?family=Work+Sans:200,300,400,500,600,700"
      rel="stylesheet"
    />
    <link
      href="//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,900,900italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <!-- header -->

    <% include partials/navbarCompany %>

    <hr />

    <div class="container">
      <div class="quickhire-wrapper min-height-content">
        <% if(message.length !== 0) { %>
        <div class="alert alert-danger" role="alert"><%= message%></div>
        <% } %>

        <div class="row">
          <div class="col-md-8 col-sm-7 col-xs-12">
            <h1>Quickhire Request List</h1>
          </div>
          <div class="col-md-4 col-sm-5 col-xs-12">
            <a
              href="/company/quickhire/<%= quickhire.id %>/find"
              class="btn btn-primary btn-block"
              ><i class="fa fa-plus"></i> Request Candidates</a
            >
          </div>
        </div>
        <hr />

        <% if (quickhire.request_list.length <= 0 ) { %>
        <ul class="list-group">
          <li
            class="list-group-item"
            style="text-align: center; font-size: 16px;"
          >
            Click "Request Candidates" to request someone
          </li>
        </ul>
        <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Current Status</th>
              <th>Date Created</th>
              <th>Action</th>
            </tr>
            <% for(i=0; i<= quickhire.request_list.length-1; i++) {%>
              <tr>
                <td><a href="/profile/<%= quickhire.request_list[i].seeker_id.id %>"><%= quickhire.request_list[i].seeker_id.name %></a> </td>
                <td><%= quickhire.request_list[i].status %></td>
                <td><%= quickhire.request_list[i].created_at %></td>
              </tr>
            <% } %>
          </thead>
        </table>
        <% } %>
      </div>
    </div>

    <!-- footer -->
    <% include partials/footer %>
    <!-- //footer -->

    <a href="#home" class="scroll" id="toTop" style="display: block;">
      <span id="toTopHover" style="opacity: 1;"> </span
    ></a>
    <!-- js -->
    <script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>

    <script type="text/javascript" src="js/bootstrap.js"></script>
  </body>
</html>
