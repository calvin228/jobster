<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Login - Jobster</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:300,400,700"
      rel="stylesheet"
    />
    <style>
      #success_message {
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="flex-container">
      <div class="auth-box">
        <img src="/images/logo.png" class="auth-logo-img" />
        <form class="auth-form" action="/login/user" method="post" id="login_form">
          <span class="auth-title">Seeker Login</span>
          <% if(message.length !== 0) { %>
          <div class="alert alert-danger" role="alert"><%= message%></div>
          <% } %>
          <div class="form-group form-group-lg">
            <label for="exampleInputEmail1">Username</label>
            <input
              name="username"
              type="text"
              class="form-control"
              id="exampleInputEmail1"
              placeholder="Username"
            />
          </div>
          <div class="form-group form-group-lg">
            <label for="exampleInputPassword1">Password</label>
            <input
              name="password"
              type="password"
              class="form-control"
              id="exampleInputPassword1"
              placeholder="Password"
            />
          </div>
          <button type="submit" class="btn btn-default btn-block btn-lg">Login</button>
        </form>
      </div>
    </div>
  </body>
</html>
