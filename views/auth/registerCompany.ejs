<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Jobster - Registration</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
    />
    <style>
      #success_message {
        display: none;
      }
    </style>
    <script src="https://code.jquery.com/jquery-3.2.1.js"></script>
  </head>
  <body>
    <br />
    <br />

    <div class="container">
      <% if(message.length !== 0) { %>
      <div class="alert alert-danger" role="alert"><%= message%></div>
      <% } %>

      <form
        class="well form-horizontal"
        action="/register/company"
        method="POST"
        enctype="multipart/form-data"
      >
        <fieldset>
          <!-- Form Name -->
          <legend>Company Registration</legend>

          <div class="form-group">
            <label class="col-md-4 control-label">Username</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-user"></i
                ></span>
                <input
                  type="text"
                  name="username"
                  placeholder="Username"
                  class="form-control"
                  required
                />
              </div>
            </div>
          </div>

          <!-- Text input-->

          <div class="form-group">
            <label class="col-md-4 control-label">Company Name</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-user"></i
                ></span>
                <input
                  type="text"
                  name="name"
                  placeholder="Company Name"
                  class="form-control"
                  required
                />
              </div>
            </div>
          </div>

          <!-- ADDRESS -->

          <div class="form-group">
            <label class="col-md-4 control-label">Company Address</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-home"></i
                ></span>
                <input
                  name="address"
                  placeholder="Company Address"
                  class="form-control"
                  type="address"
                  required
                />
              </div>
            </div>
          </div>

          <!-- COMPANY TERRITORIAL -->
          <div class="form-group">
            <label class="col-md-4 control-label">Company Territorial</label>
            <div class="col-md-4 selectContainer">
              <select name="territorial" required>
                <option value="Medan">Medan</option>
                <option value="Binjai">
                  Binjai
                </option>
                <option value="Belawan">
                  Belawan
                </option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label">Company Description</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-home"></i
                ></span>
                <textarea
                  name="description"
                  class="form-control"
                  required
                ></textarea>
              </div>
            </div>
          </div>

          <!-- IMAGE URL input-->

          <div class="form-group">
            <label class="col-md-4 control-label">Company Logo</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-picture"></i
                ></span>
                <input
                  name="image"
                  placeholder="Company Logo"
                  class="form-control"
                  type="file"
                  required
                />
              </div>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-4 control-label">E-Mail Address</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-envelope"></i
                ></span>
                <input
                  name="email"
                  placeholder="E-Mail Address"
                  class="form-control"
                  type="email"
                />
              </div>
            </div>
          </div>

          <!-- Text input-->

          <div class="form-group">
            <label class="col-md-4 control-label">Phone Number</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-earphone"></i
                ></span>
                <input
                  name="phone_number"
                  placeholder="Phone Number"
                  class="form-control"
                  type="tel"
                  required
                />
              </div>
            </div>
          </div>

          <!-- Text input-->

          <div class="form-group">
            <label class="col-md-4 control-label">Password</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-lock"></i
                ></span>
                <input
                  name="password"
                  placeholder="Password"
                  class="form-control"
                  type="password"
                  required
                />
              </div>
            </div>
          </div>

          <!-- Button -->
          <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
              <button
                type="submit"
                class="btn btn-success"
                name="register"
                value="submit"
                required
              >
                Register <span class="glyphicon glyphicon-send"></span>
              </button>
              <a href="/company" class="btn btn-danger">Cancel </a>
            </div>
          </div>
        </fieldset>
      </form>
    </div>

    <!-- /.container -->
    <script src="/js/load-location.js"></script>
  </body>
</html>
