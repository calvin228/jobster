<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Quick Hire Alert - Jobster</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
    />
    <link rel="shortcut icon" href="/images/icon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="keywords"
      content="Soft Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design"
    />
    <script>
      addEventListener(
        "load",
        function() {
          setTimeout(hideURLbar, 0);
        },
        false
      );
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    </script>
    <!--//tags -->
    <link
      href="/css/bootstrap.css"
      rel="stylesheet"
      type="text/css"
      media="all"
    />
    <link href="/css/style.css" rel="stylesheet" type="text/css" media="all" />

    <link href="/css/font-awesome.css" rel="stylesheet" />
    <!-- //for bootstrap working -->
    <link
      href="//fonts.googleapis.com/css?family=Work+Sans:200,300,400,500,600,700"
      rel="stylesheet"
    />
    <link
      href="//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,900,900italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <!-- header -->

    <% include partials/navbar %>

    <hr />

    <div class="container" style="font-family:Arial, Helvetica, sans-serif">
      <div class="quickhire-wrapper min-height-content">
        <div class="row">
          <div class="col-md-8 col-sm-7 col-xs-12">
            <h1>Quickhire Alert</h1>
          </div>
        </div>
        <hr />

        <ul class="list-group ">
          <% if (quickhire.length > 0) { %> <% for(i=0;
          i<=quickhire.length-1;i++) { %>
          <li class="list-group-item quickhire-alert-list">
            <div class="job-title">
              <a href="/quickhire-alert/<%= quickhire[i].id %>"
                ><strong><%= quickhire[i].job_title %></strong></a
              >
            </div>
            <div>
              <p><%= quickhire[i].company.name %></p>
            </div>
            <p>Date Required : <%= quickhire[i].required_date %></p>
            <p class="pull-right time-label-grey">
              <em
                >Requested at : <%= quickhire[i].request_list.filter(list =>
                list.seeker_id == user.id).map(list => list.created_at) %></em
              >
            </p>
          </li>
          <% } %> <% } else {%>

          <li
            class="list-group-item"
            style="text-align: center; font-size: 16px;"
          >
            Currently there are no alerts for you.
          </li>

          <% }%>
        </ul>
      </div>
    </div>

    <!-- sfooter -->
    <% include partials/footer %>
    <!-- //footer -->

    <a href="#home" class="scroll" id="toTop" style="display: block;">
      <span id="toTopHover" style="opacity: 1;"> </span
    ></a>
    <!-- js -->
    <script type="text/javascript" src="js/jquery-2.1.4.min.js"></script>

    <script type="text/javascript" src="js/bootstrap.js"></script>
  </body>
</html>
